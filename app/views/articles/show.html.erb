<h1 class="text-center p-3">Article Details</h1>
<div class="container">

  <%= render 'shared/errors' %>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>

      <div class="input-group row">
        <%= f.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article"  %>
        </div>
      </div>
      <br />

      <div class="input-group row">
        <%= f.label :description, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
        </div>
      </div>

      <div class="input-group justify-content-center m-3">
        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info p-2 m-2" %>
        <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger p-2 m-2", method: :delete, data: {confirm: "Are you sure?"} %>
      </div>

      <% end %>
      <div class="text-center m-3">
        <%= link_to 'Return to articles listing', articles_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>
