<h1 class="text-center p-3"><%= "(Admin) " if @user.admin? %><%= @user.username %>'s Profile</h1>
<div class="container text-center", "img-fluid">
  <%= gravatar_for @user, size: 200 %>
</div>
<div class="container text-center mt-4">
  <% if logged_in? && @user == current_user %>
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-info" %>
  <% end %>
</div>

<h3 class="text-center p-3">Articles</h3>

<div class="flickr_pagination">
  <%= will_paginate @articles, inner_window: 3, outer_window: 0, :container => false %>
</div>

<%= render 'articles/article' %>

