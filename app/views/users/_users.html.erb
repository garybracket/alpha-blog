<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-center">
      <div class="col-6 m-4">
        <div class="card text-center shadow m-6 bg-body rounded">
          <div class="card-header fst-italic">
            <%= link_to user.username, user_path(user) %>
          </div>
          <div class="card-body">
            <td><div class="container text-center">
              <%= gravatar_for user, size: 200 %>
            </div></td>
            <p class="card-text"> <td><%= user.articles.count %> articles</td></p>
            <%= link_to "View Profile", user_path(user), class: "btn btn-outline-success" %>
            <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-outline-info" %>
            <%= link_to "Delete", user_path(user), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
            <small>Created  <%= time_ago_in_words(user.created_at) %> ago,
            edited <%= time_ago_in_words(user.updated_at) %> ago </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
